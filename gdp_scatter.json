{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 683,
  "height": 384,
  "background": "white",
  "title": {"text": "Malaysia State GDP (RM billion, 2024)", "anchor": "start"},
  "data": {
    "url": "https://raw.githubusercontent.com/phuayy/FIT3179_Homework_Week_10/main/malaysia_state_gdp_2024_dosm.csv",
    "format": {"type": "csv"}
  },
  "params": [{
    "name": "topN_filter",
    "value": 15,
    "bind": {
      "input": "range",
      "min": 1,
      "max": 15,
      "step": 1,
      "name": "Show Top N States: "
    }
  }],
  "transform": [
    {"calculate": "toNumber(replace(datum.gdp_rm_million_2024, /[\\\"|,]/g, ''))", "as": "gdp"},
    {"filter": "isFinite(datum.gdp)"},
    {"calculate": "datum.gdp / 1000", "as": "gdp_billion"},
    {"calculate": "replace(datum.state, /\\\"/g, '')", "as": "state_clean"},
    {"filter": "datum.state_clean !== 'Malaysia (total)' && datum.state_clean !== 'Unattributed / Supranational (not assigned to states)'"},
    {
      "window": [{"op": "dense_rank", "as": "rank"}],
      "sort": [{"field": "gdp_billion", "order": "descending"}]
    },
    {"filter": "datum.rank <= topN_filter"}
  ],
  "layer": [
    {
      "mark": {"type": "bar", "color": "#2563EB"},
      "encoding": {
        "y": {
          "field": "state_clean",
          "type": "nominal",
          "sort": "-x",
          "title": "State",
          "axis": {"grid": false}
        },
        "x": {
          "field": "gdp_billion",
          "type": "quantitative",
          "title": "GDP (RM billion, 2024)",
          "axis": {"format": ".1f", "grid": false}
        },
        "tooltip": [
          {"field": "state_clean", "title": "State", "type": "nominal"},
          {"field": "gdp_billion", "title": "Gross Domestic Product (RM billion)", "type": "quantitative", "format": ".2f"}
        ]
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "left",
        "baseline": "middle",
        "dx": 5,
        "color": "#111"
      },
      "encoding": {
        "y": {
          "field": "state_clean",
          "type": "nominal",
          "sort": "-x"
        },
        "x": {
          "field": "gdp_billion",
          "type": "quantitative"
        },
        "text": {"field": "gdp_billion", "type": "quantitative", "format": ".1f"}
      }
    }
  ]
}