{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": "container",
  "height": 520,
  "background": "transparent",
  "projection": {"type": "naturalEarth1"},
  "layer": [
    {
      "data": {
        "url": "output (1).json",
        "format": {"type": "topojson", "feature": "custom.geo"}
      },
      "mark": {
        "type": "geoshape",
        "fill": "#333333",
        "stroke": "#777777",
        "strokeWidth": 0.3
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/phuayy/FIT3179_A2/refs/heads/main/output%20(1).json",
        "format": {"type": "topojson", "feature": "custom.geo"}
      },
      "transform": [
        {
          "lookup": "properties.name",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/phuayy/FIT3179_A2/refs/heads/main/medals_total.csv",
              "transform": [
                {
                  "joinaggregate": [
                    {"op": "sum", "field": "Total", "as": "GrandTotal"}
                  ]
                },
                {
                  "calculate": "(datum.Total / datum.GrandTotal) * 100",
                  "as": "Percentage"
                }
              ]
            },
            "key": "Country",
            "fields": ["Total", "Percentage"]
          }
        },
        {
          "filter": "datum.Percentage > 0"
        }
      ],
      "mark": {
        "type": "geoshape",
        "stroke": "white",
        "strokeWidth": 0.5
      },
      "encoding": {
        "color": {
          "field": "Percentage",
          "type": "quantitative",
          "title": "Percentage of Total Medals",
          "scale": {
            "scheme": "viridis"
          },
          "legend": {
            "titleColor": "#FFFFFF",
            "labelColor": "#FFFFFF",
            "format": ".2f"
          }
        },
        "tooltip": [
          {
            "field": "properties.name",
            "type": "nominal",
            "title": "Country"
          },
          {
            "field": "Total",
            "type": "quantitative",
            "title": "Total Medals"
          },
          {
            "field": "Percentage",
            "type": "quantitative",
            "title": "Percentage of Total",
            "format": ".2f"
          }
        ]
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/phuayy/FIT3179_A2/refs/heads/main/output%20(1).json",
        "format": {"type": "topojson", "feature": "ne_110m_graticules_30"}
      },
      "mark": {
        "type": "geoshape",
        "fill": null,
        "stroke": "#444444",
        "strokeWidth": 0.5
      }
    }
  ]
}
